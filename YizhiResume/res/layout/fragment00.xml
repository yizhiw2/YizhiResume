<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >

    <!-- 	android:adjustViewBounds="true"
       	android:scaleType="centerCrop"
       	这两句配合起来才让图片完整缩放到正上方而且不占据整个屏幕 -->
     <ImageView 
        android:id="@+id/faceImage"
        android:contentDescription="@string/faceImage_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/yizhi0519"
        android:background="#00ff00"
       	android:adjustViewBounds="true"
       	android:scaleType="centerCrop"
        />
    <TextView 
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/note"
        android:textSize="12sp"
        android:textColor="#999d9c"
        android:textStyle="italic"
        android:paddingRight="5dp"
      	android:layout_alignParentRight="true"
      	android:layout_below="@id/faceImage"
	 />
      
    <TextView 
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myName"
        android:textSize="30sp"
        android:textColor="@color/color_text_black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_above="@+id/age"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myAge"
        android:textSize="30sp"
        android:textColor="@color/color_text_black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:layout_above="@+id/habit"
        android:layout_alignParentLeft="true"
        />
     
    <TextView 
        android:id="@+id/habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myHabit"
       	android:textSize="30sp"
        android:textColor="@color/color_text_black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
      	android:layout_alignParentBottom="true"
      	android:layout_alignParentLeft="true"
      	android:paddingBottom="40dp"
        />
     

</RelativeLayout>
